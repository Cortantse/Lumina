{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:app:default",
    "core:event:default", 
    "core:window:default",
    "core:path:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "core:window:allow-set-title",
    "screenshots:default",
    "fs:default",
    "fs:allow-appdata-read",
    "fs:allow-appdata-write",
    "fs:scope-appdata-recursive"
  ]
}
